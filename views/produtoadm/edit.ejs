<%-include('../cabecalho.ejs')%>

<style>
  .grid footer {
    grid-column: 1 / -1;
    display: flex;
    gap: 12px;
    margin-top: 24px;
  }

  .grid footer button,
  .grid footer a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    min-width: 140px;
    height: 42px;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  .grid footer button {
    background: #1a56db;
    color: white;
    border: none;
    cursor: pointer;
  }

  .grid footer button:hover {
    background: #1e429f;
    transform: translateY(-1px);
  }

  .grid footer a {
    color: #666;
    background: transparent;
    border: 1px solid #e2e8f0;
  }

  .grid footer a:hover {
    background: #f5f5f5;
    border-color: #cbd5e0;
    transform: translateY(-1px);
  }
</style>

<section class="section">
  <div class="content">
    <header>
      <h3>Editar Produto</h3>
    </header>

    <form id="form-produto" action="/produto/edit/<%= formData._id %>" method="POST">
      <div class="grid">
        <div>
          <label for="nome">Nome</label>
          <input id="nome" name="nome" type="text" required value="<%= formData.nome %>">
        </div>

        <div>
          <label for="descricao">Descrição</label>
          <input id="descricao" name="descricao" type="text" value="<%= formData.descricao %>">
        </div>

        <div>
          <label for="preco">Preço</label>
          <input id="preco" name="preco" type="number" step="0.01" required value="<%= formData.preco %>">
        </div>

        <div>
          <label for="quantidade">Quantidade</label>
          <input id="quantidade" name="quantidade" type="number" required value="<%= formData.quantidade %>">
        </div>

        <div>
          <label for="fornecedor">Fornecedor</label>
          <select id="fornecedor" name="fornecedor" required>
            <option value="">Selecione um fornecedor</option>
            <% fornecedores.forEach(function(f) { %>
              <option value="<%= f._id %>" 
                <%= (formData.fornecedor && formData.fornecedor._id.toString() === f._id.toString()) ? 'selected' : '' %>>
                <%= f.nome %>
              </option>
            <% }); %>
          </select>
        </div>

        <footer>
          <button type="submit">Salvar Alterações</button>
          <a href="/produto/lst">Cancelar</a>
        </footer>
      </div>
    </form>
  </div>
</section>

<%-include('../rodape.ejs')%>