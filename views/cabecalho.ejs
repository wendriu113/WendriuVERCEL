<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gerenciamento de Produtos</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg: #f7f7fb;
      --panel: #ffffff;
      --text: #0f172a;
      --muted: #6b7280;
      --primary: #0f0f1a;
      --primary-contrast: #ffffff;
      --border: #e5e7eb;
      --ring: #11182720;

    }

    * {
      box-sizing: border-box;
    }

    html,
    body {
      height: 100%;
    }

    body {
      margin: 0;
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
      color: var(--text);
      background: var(--bg);
    }

    .container {
      max-width: 1100px;
      margin: 40px auto 80px;
      padding: 0 20px;
    }

    /* Header */
    .header {
      display: flex;
      align-items: center;
      gap: 14px;
      margin-bottom: 8px;
    }

    .logo {
      width: 28px;
      height: 28px;
      border-radius: 6px;
      display: grid;
      place-items: center;
      background: #111827;
      color: #fff;
      font-weight: 700;
    }

    .title {
      font-size: 28px;
      font-weight: 700;
      letter-spacing: -0.01em;
    }

    .subtitle {
      color: var(--muted);
      margin: 0 0 18px 44px;
    }

    /* Tabs */
    .tabs {
      display: flex;
      gap: 6px;
      background: #eef0f6;
      padding: 6px;
      border-radius: 999px;
      width: fit-content;
      box-shadow: inset 0 0 0 1px #e5e7eb;
      margin-left: 44px;
    }

    .tab {
      border: 0;
      background: transparent;
      padding: 10px 18px;
      border-radius: 999px;
      cursor: pointer;
      font-weight: 600;
      color: #374151;
    }

    .tab[aria-selected="true"] {
      background: #fff;
      color: #111827;
      box-shadow: 0 1px 2px rgba(0, 0, 0, .06);
    }

    /* Card Section */
    .section {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 22px;
      margin-top: 22px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, .03);
    }

    .section h2 {
      margin: 0 0 4px;
      font-size: 22px;
    }

    .section p {
      margin: 0 0 18px;
      color: var(--muted);
    }

    /* Actions */
    .actions {
      display: flex;
      justify-content: flex-end;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      border: 0;
      border-radius: 10px;
      padding: 10px 14px;
      font-weight: 600;
      cursor: pointer;
    }

    .btn.primary {
      background: var(--primary);
      color: var(--primary-contrast);
    }

    .btn.ghost {
      background: transparent;
      color: #111827;
    }

    .btn svg {
      width: 18px;
      height: 18px;
    }

    /* Table */
    .table-wrap {
      overflow: auto;
      border-radius: 12px;
      border: 1px solid var(--border);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
    }

    thead th {
      position: sticky;
      top: 0;
      background: #fafafa;
      border-bottom: 1px solid var(--border);
      text-align: left;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: .04em;
      color: #6b7280;
      padding: 12px 14px;
    }

    tbody td {
      padding: 14px;
      border-bottom: 1px solid var(--border);
      vertical-align: top;
    }

    tbody tr:hover {
      background: #fafafa;
    }

    /* Badges */
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: 12px;
      font-weight: 600;
      padding: 6px 10px;
      border-radius: 999px;
    }

    .type-cordas {
      background: var(--badge-cordas);
    }

    .type-teclas {
      background: var(--badge-teclas);
    }

    .type-percussao {
      background: var(--badge-percussao);
    }

    .type-sopro {
      background: var(--badge-sopro);
    }

    .cond-novo {
      background: var(--cond-novo);
    }

    .cond-otimo {
      background: var(--cond-otimo);
    }

    .cond-bom {
      background: var(--cond-bom);
    }

    .price {
      font-weight: 700;
    }

    .muted {
      color: var(--muted);
    }

    .actions-cell {
      white-space: nowrap;
      text-align: right;
    }

    .icon-btn {
      background: transparent;
      border: 0;
      padding: 8px;
      cursor: pointer;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: background .12s ease, transform .06s ease;
    }

    .icon-btn:focus {
      outline: 3px solid #c7d2fe55;
      outline-offset: 2px;
    }

    .icon-btn:hover {
      background: #f2f2f6;
      transform: translateY(-1px);
    }

    .icon {
      width: 18px;
      height: 18px;
      color: #111827;
      display: block;
    }

    /* Action variants */
    .icon-btn.edit .icon {
      color: #0ea5a4;
    }

    /* teal */
    .icon-btn.delete .icon {
      color: #ef4444;
    }

    /* red */
    .icon-btn.view .icon {
      color: #2563eb;
    }

    /* blue */
    /* Small labeled action buttons (optional) */
    .action-pill {
      display: inline-flex;
      gap: 8px;
      align-items: center;
      padding: 6px 10px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 13px;
    }

    .action-pill.edit {
      background: #ecfeff;
      color: #065f46;
    }

    .action-pill.delete {
      background: #fff1f2;
      color: #7f1d1d;
    }

    /* Modal */
    .modal-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(13, 16, 23, .45);
      display: none;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .modal {
      width: min(720px, 100%);
      background: var(--panel);
      border-radius: 16px;
      border: 1px solid var(--border);
      box-shadow: 0 20px 60px rgba(0, 0, 0, .25);
    }

    .modal header {
      padding: 18px 22px 0;
    }

    .modal h3 {
      margin: 6px 0 10px;
    }

    .modal .content {
      padding: 0 22px 22px;
    }

    .modal .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 14px;
    }

    .modal .full {
      grid-column: 1 / -1;
    }

    label {
      display: block;
      font-size: 13px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 6px;
    }

    input[type="text"],
    input[type="number"],
    input[type="email"],
    input[type="password"],
    input[type="date"],
    input[type="tel"],
    textarea,
    select {
      width: 100%;
      padding: 12px 12px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #f9fafb;
      outline: none;
      transition: box-shadow .15s ease, border-color .15s ease;
      font: inherit;
    }

    textarea {
      resize: vertical;
      min-height: 90px;
    }

    input:focus,
    textarea:focus,
    select:focus {
      border-color: #c7d2fe;
      box-shadow: 0 0 0 4px #c7d2fe55;
      background: #fff;
    }

    .field-help {
      font-size: 12px;
      color: var(--muted);
      margin-top: 6px;
    }

    .modal footer {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      padding: 14px 22px 22px;
      border-top: 1px dashed var(--border);
    }

    /* Form layout helpers used by add.ejs views */
    .content {
      padding: 14px 0 22px;
    }

    form .grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 14px;
      align-items: start;
    }

    form footer {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 12px;
    }

    @media (max-width: 720px) {
      form .grid {
        grid-template-columns: 1fr;
      }

      form footer {
        flex-direction: column-reverse;
        align-items: stretch;
      }

      form footer .btn {
        width: 100%;
      }
    }

    .close-x {
      position: absolute;
      right: 14px;
      top: 12px;
      background: transparent;
      border: 0;
      font-size: 22px;
      line-height: 1;
      cursor: pointer;
      color: #6b7280;
    }

    .close-x:hover {
      color: #111827;
    }

    /* Utilities */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    @media (max-width: 720px) {
      .modal .grid {
        grid-template-columns: 1fr;
      }

      .subtitle,
      .tabs {
        margin-left: 0;
      }

      .header {
        flex-wrap: wrap;
      }
    }

    #dataInicio,
    #dataFim {
      appearance: none;
      background-color: #fafafa;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px 12px;
      font-size: 14px;
      color: #333;
      width: 100%;
      box-sizing: border-box;
      transition: border 0.3s ease, box-shadow 0.3s ease;
    }

    #dataInicio:focus,
    #dataFim:focus {
      border-color: #888;
      outline: none;
      box-shadow: 0 0 0 2px rgba(100, 100, 255, 0.2);
    }
  </style>
</head>

