<%-include('../cabecalho.ejs')%>

<style>
  /* Botões no footer */
  .grid footer {
    grid-column: 1 / -1;
    display: flex;
    gap: 12px;
    margin-top: 24px;
  }

  .grid footer button,
  .grid footer a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    min-width: 140px;
    height: 42px;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
  }

  /* Botão Adicionar - estilo primário */
  .grid footer button {
    background: #020303;
    color: white;
    border: none;
  }

  .grid footer button:hover {
    background: #1e429f;
    transform: translateY(-1px);
  }

  /* Botão Cancelar - estilo secundário */
  .grid footer a {
    color: #666;
    background: transparent;
    border: 1px solid #e2e8f0;
  }

  .grid footer a:hover {
    background: #f5f5f5;
    border-color: #cbd5e0;
    transform: translateY(-1px);
  }

  /* Ícone no botão adicionar */
  .grid footer button svg {
    width: 18px;
    height: 18px;
  }

  @media (max-width: 640px) {
    .grid footer {
      flex-direction: column;
    }
    .grid footer button,
    .grid footer a {
      width: 100%;
    }
  }
</style>

<section class="section">
  <div class="content">
    <header>
      <h3>Editar Usuário</h3>
    </header>

    <form id="form-usuario" action="/usuario/edit/<%= formData._id %>" method="POST" autocomplete="off">
      <div class="grid">
        <div>
          <label for="nome">Nome</label>
          <input id="nome" name="nome" type="text" required value="<%= formData.nome %>">
        </div>

        <div>
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required value="<%= formData.email %>">
        </div>

        <div>
          <label for="senha">Nova Senha</label>
          <input id="senha" name="senha" type="password" placeholder="Deixe em branco para manter a senha atual">
        </div>

        <div>
          <label for="perfil">Perfil</label>
          <select id="perfil" name="perfil">
            <option value="usuario" <%= formData.perfil === 'usuario' ? 'selected' : '' %>>
              Usuário
            </option>
            <option value="admin" <%= formData.perfil === 'admin' ? 'selected' : '' %>>
              Administrador
            </option>
          </select>
        </div>

        <footer>
          <button type="submit">Salvar Alterações</button>
          <a href="/usuario/lst">Cancelar</a>
        </footer>
      </div>
    </form>

    <% if (typeof showAlert !== 'undefined' && showAlert && alertMessage) { %>
      <script>alert("<%= alertMessage %>");</script>
    <% } %>
  </div>
</section>

<%-include('../rodape.ejs')%>